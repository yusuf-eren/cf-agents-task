{
  "name": "cf-agents-workspace",
  "version": "1.0.0",
  "description": "Cloudflare Agents workspace with Turborepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "check": "turbo check",
    "format": "turbo format",
    "test": "turbo test",
    "deploy": "turbo deploy",
    "types": "turbo types",
    "clean": "turbo clean",
    "backend:dev": "turbo dev --filter=backend",
    "frontend:dev": "turbo dev --filter=frontend",
    "backend:deploy": "turbo deploy --filter=backend",
    "frontend:build": "turbo build --filter=frontend"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.2",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}
